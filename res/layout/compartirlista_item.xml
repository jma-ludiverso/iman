<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/compartirLista_Item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@android:color/white"
    android:theme="@style/estilo_general">
    
	    <ImageView
	        android:id="@+id/imgCompartirListaContacto"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:layout_marginLeft="6dp"
	        android:src="@drawable/icon"
	        android:contentDescription="@string/lblCompartirListaContacto" />
	    
	    <TextView
        android:id="@+id/lblNombreContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgCompartirListaContacto"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />
                
	<CheckBox
		android:id="@+id/chkCompartirListaContacto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="5dp"
		android:layout_centerVertical="true"
		android:textAppearance="@android:attr/textAppearanceMedium" 
		android:background="@drawable/checkbox_background" android:button="@drawable/checkbox"/>
	    	    	    
 </RelativeLayout>